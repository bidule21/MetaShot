<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/logo" />

    <EditText
        android:id="@+id/metawearMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="text"
        android:backgroundTint="@color/black"
        android:hint="Metawear Mac Address" />

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/metawearMac"
        android:backgroundTint="@color/orange"
        android:onClick="onClickConnect"
        android:text="Connect" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/connect"
        android:backgroundTint="@color/orange"
        android:text="Start" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/start"
        android:backgroundTint="@color/orange"
        android:text="Stop" />

    <Button
        android:id="@+id/saveRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/stop"
        android:onClick="onClick"
        android:backgroundTint="@color/orange"
        android:text="@string/save" />

    <Button
        android:id="@+id/cancelRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/saveRecord"
        android:layout_below="@id/saveRecord"
        android:layout_marginEnd="10dp"
        android:onClick="onClick"
        android:backgroundTint="@color/orange"
        android:text="@string/cancel" />

    <ListView
        android:id="@+id/shotRecordsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelRecord" >

    </ListView>

</RelativeLayout>

