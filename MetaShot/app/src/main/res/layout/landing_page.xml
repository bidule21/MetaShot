<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andersonlucier.android.metashot.MainActivity">

    <include layout="@layout/logo" />

    <Button
        android:id="@+id/new-record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:text="@+string/shooting_new" />

    <Button
        android:id="@+id/view-record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/new-record"
        android:layout_centerHorizontal="true"
        android:text="@+string/shooting_view" />

    <Button
        android:id="@+id/hunting-mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/view-record"
        android:layout_centerHorizontal="true"
        android:text="@+string/hunting_mode" />
</RelativeLayout>
