<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/logo" />

    <TextView
        android:id="@+id/shotNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoHeader"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/barrelTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shotNumber"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/targetX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barrelTemp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/targetY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/targetX"
        android:textColor="@color/black"/>


</RelativeLayout>
