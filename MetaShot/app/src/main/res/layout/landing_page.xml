<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andersonlucier.android.metashot.MainActivity">

    <include layout="@layout/logo" />

    <Button
        android:id="@+id/newRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:onClick="onClick"
        android:text="@string/shooting_new" />

    <Button
        android:id="@+id/viewRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/newRecord"
        android:layout_centerHorizontal="true"
        android:text="@string/shooting_view" />

    <Button
        android:id="@+id/weaponInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/viewRecord"
        android:layout_centerHorizontal="true"
        android:text="@string/inventory" />

    <Button
        android:id="@+id/huntingMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/weaponInventory"
        android:layout_centerHorizontal="true"
        android:text="@string/hunting_mode" />
</RelativeLayout>
